<div ng-controller="TicklistCtrl" ng-cloak class="ng-cloak">
	<h3 ng-show="remainingPoints()">Remaining Points: {{remainingPoints()}}</h3>
	<h3 ng-hide="remainingPoints()">Congrats!</h3>
	<h3>Climbs: {{ticks.length}}</h3>
	<ul>
		<li ng-repeat="tick in ticks">
			{{tick.points}} - {{tick.description}} <button class="btn btn-danger btn-xs" ng-click="removeTick(tick)">remove</button>
		</li>
	</ul>
	<div class="btn-group">
		<button class="btn btn-xs btn-default" ng-repeat="climb in climbs" ng-click="addTick(climb)">{{climb.description}} ({{climb.points}})</button>
	</div>
</div>