<div ng-controller="TicklistCtrl" ng-cloak class="ng-cloak">
	<h3 ng-show="remainingPoints()">Remaining Points: {{remainingPoints()}}</h3>
	<h3 ng-hide="remainingPoints()">Congrats!</h3>
	<h3>Climbs: {{ticks.length}}</h3>
	<ul>
		<li ng-repeat="tick in ticks">
			{{tick.climbingType | uppercase}} - {{tick.points}} - {{tick.description}} <button class="btn btn-danger btn-xs" ng-click="removeTick(tick)">remove</button>
		</li>
	</ul>
	<div ng-repeat="(climbingType, list) in climbs">
		{{climbingType}}
		<div class="btn-group">
			<button class="btn btn-xs btn-default" ng-repeat="climb in list" ng-click="addTick(climbingType, climb)">{{climb.description}} ({{climb.points}})</button>
		</div>
	</div>
</div>