<div class="fixed-bottom">
	<div class="info-container text-center clearfix" ng-if="remainingPoints()">
		<div class="info">
			<div class="desc">Remaining Points</div>
			<h2>{{remainingPoints() | sexypoints}}</h2>
		</div>
		<div class="info">
			<div class="desc">Workout Timer</div>
			<h2><timer seconds="0" up="true"></timer></h2>
		</div>
	</div>
</div>
